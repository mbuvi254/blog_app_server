generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  firstName String @map("firstName")
  lastName  String @map("lastName")
  emailAddress   String @unique @map("emailAddress")
  username  String @unique @map("username")
  password  String @map("password")
  isDeleted Boolean   @default(false)
  dateJoined DateTime @default(now()) @map("createdAt")
  lastUpdated DateTime @updatedAt @map("updatedAt")
  

  blogs   Blog[]
  comments Comment[]
  @@map("users")
}

model Blog{
  id String @id @default(uuid()) @map("id")
  authorId String @map("authorId")
  title String @map("title")
  synopsis String @map("synopsis")
  featuredImageUrl String ? @map("featuredImageUrl")
  content String  @map("content")
  isDeleted Boolean @default(false) @map("isDeleted") 
  isPublished Boolean @default(false) @map("isPublished")
  createdAt DateTime @default(now()) @map("createdAt")
  lastUpdated DateTime @updatedAt @map("lastUpdated")

  author User @relation(fields: [authorId],references: [id])
  comments Comment[]
  
@@map("blogs")
}

model Comment {
  id String @id @default(uuid()) @map("id")
  blogId String @map("blogId")
  userId String @map("userId")
  comment String @map("comment")
  createdAt DateTime @default(now()) @map("createdAt")
  lastUpdated DateTime @updatedAt @map("lastUpdated")
  blog Blog @relation(fields: [blogId],references: [id], onUpdate: NoAction, onDelete: NoAction)
  user User @relation(fields: [userId],references: [id], onUpdate: NoAction, onDelete: NoAction)

@@map("comments")

}
